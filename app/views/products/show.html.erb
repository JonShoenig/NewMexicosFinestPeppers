<p id="notice"><%= notice %></p>
<div class="container", id="display">
  <div class="row">
    <div class="col-sm-4 col-md-8 col-lg-8">
<h4>
  <strong>
  <%= @product.name %>
  </strong>
</h4>
<br>
<%= image_tag(@product.image_url, class: "img-responsive", id:"pic2") %>
<br>
<p>
  <strong class="glyphicon glyphicon-minus"></strong>Description:
  <%= @product.description %>
</p>

<p>
	<strong class="glyphicon glyphicon-minus"></strong>Colour:
	<%= @product.colour %>
</p>
<p>
	<strong class="glyphicon glyphicon-minus"></strong>Price: $
	<%= @product.price %>
</p>
<br>
<div class="container">
  <%= form_tag "/payments/create" do %>
    <%= render partial: "shared/stripe_checkout_button" %>
  <% end %> 
</div>  
<br>
      <div class="review">
        <%= render partial: 'new_comment' %>

        <%= render partial: 'comments' %>
        
      </div>
      <br>
    </div>
  </div>
  <div class="container" id="average-rating">  
    <h5><%= will_paginate @comments %></h5>
  </div>
  <div id="links">
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
  </div>
</div>